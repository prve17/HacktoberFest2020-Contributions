class child2:public father_and_mother{
public:
        int askingparents(){
        cout<<"What is my height and colour?"<<endl;
        return 0;
        }
        int setcolourandheight(int ih,string ic){
        height=ih;
        skincolour=ic;
        return 0;
        }
        int display(){
        cout<<"height is "<<height<<" and colour is "<<skincolour<<endl;
        return 0;
        }
};

int main(){
child1 eli;
child2 reva;
eli.setcolourandheight(6,"grey");
reva.setcolourandheight(16,"white");
eli.display();
reva.display();
}
